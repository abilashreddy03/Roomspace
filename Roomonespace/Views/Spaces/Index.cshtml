@model IEnumerable<Roomonespace.Models.Space>

@{
    ViewBag.Title = "status";
}

<h2>Status</h2>

<p>
        @Html.ActionLink("Create New Meeting Room", "Create")
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Room)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @if (item.Available == "No")
                {
                    <span class="room-color-No">@Html.DisplayFor(modelItem => item.Room)</span>
                }
                @if (item.Available == "Yes")
                {
                    <span class="room-color-Yes">@Html.DisplayFor(modelItem => item.Room)</span>

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            @if (item.Available == "No")
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>

                <td>
                    @Html.ActionLink("Check-Out", "Realese", new { id = item.Id }) |
                    @Html.ActionLink("Modify", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            }
            @if (item.Available == "Yes")
            {
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td colspan="4">
                    @Html.ActionLink("Check-In", "Book", new { id = item.Id }) |
                </td>
            }
        </tr>
    }

</table>
